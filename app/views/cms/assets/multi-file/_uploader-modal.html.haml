= form_for [:cms, parent_resource, Asset.new].compact, html: { id: "multi-file_upload", multipart: true } do |f|
  .modal-header
    .close{ data: { dismiss: 'modal' } } &times;
    .fileupload-buttonbar
      %button.btn.fileinput-button
        %i.icon-plus.icon-white
        Add Files
        = f.file_field :asset_path, multiple: true

  .modal-body
    %ul.files

= render 'cms/assets/multi-file/template-errors'
= render 'cms/assets/multi-file/template-upload'
= render 'cms/assets/multi-file/template-download'