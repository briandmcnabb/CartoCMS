<script id="template-upload" type="text/html">
  {% for (var i=0, files=o.files, l=files.length, file=files[0]; i<l; file=files[++i]) { %}
  <li class="template-upload fade">
    <div class="preview"><div><span class="fade"></span></div></div>
    <div class="name"><div>{%=file.name%}</div></div>
    <div class="size"><div>{%=o.formatFileSize(file.size)%}</div></div>
    {% if (file.error) { %}
    <div class="error" colspan="2"><div><span class="label important">Error</span> {%=fileUploadErrors[file.error] || file.error%}</div></div>
    {% } else if (o.files.valid && !i) { %}
    <div><div class="progress progress-info progress-striped active"><div class="bar" style="width:0%;"></div></div></div>
    <div class="start">{% if (!o.options.autoUpload) { %}<button class="btn primary"><i class="icon-upload icon-white"></button>{% } %}</div>
    {% } else { %}
    <div colspan="2"></div>
    {% } %}
    <div class="cancel">{% if (!i) { %}<button class="btn info"><i class="icon-ban-circle icon-white"></i></button>{% } %}</div>
  </li>
  {% } %}
</script>