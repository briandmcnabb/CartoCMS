.modal-header
  .close{ data: { dismiss: 'modal' } } &times;
  = content_tag :h3, 'New ' + resource_class.to_s.titleize

= simple_form_for [:cms, Page.new], html: { class: 'form-horizontal' } do |f|
  .modal-body
    = f.input :title, autofocus: true
    = f.input :body, label: 'Template', collection: PageTemplate.order('position').map { |template| [template.name, template.body] }
  .modal-footer
    = f.button :submit, 'Create New Page', class: 'btn btn-primary'