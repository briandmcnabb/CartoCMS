- content_for :head do
  %title= content_for?(:title) ? "CartoCMS: #{yield(:title)}" : "CartoCMS"
  %meta{ :name => "description", :content => "CartoCMS" }/
  %meta{ :name => "author", :content => "New Cartographers Creative" }/
  
- stylesheet 'CartoCMS/application'

- javascript 'CartoCMS/application'
  
- content_for :content do

  %section.container
    %header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to '#', class: 'brand' do
            %span Carto
            %span CMS
          %nav
            %ul.nav.pull-right
              %li.dropdown
                = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                  %span Event
                  %b.caret 
                %ul.dropdown-menu
                  %li= link_to 'Users', '#'
                  %li.divider
                  %li= link_to 'Posts', '#'
                  %li.divider
                  %li= link_to 'Stories', '#'
                  %li.divider
                  %li= link_to 'Topics', '#'
                  %li.divider
                  %li= link_to 'Events', '#'
              %li.dropdown
                = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                  %span Admin
                  %b.caret 
                %ul.dropdown-menu
                  %li= link_to 'Settings', '#'
                  %li.divider
                  %li= link_to 'Logout', '#'
        
        
    = content_for?(:body) ? yield(:body) : yield
                
= parent_layout 'boilerplate'