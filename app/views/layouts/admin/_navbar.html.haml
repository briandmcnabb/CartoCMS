.navbar.navbar-fixed-top
  .navbar-inner
    %header.container.site-wide
      %h1.pull-left
        %span Carto
        %span CMS
      %nav
        %ul.nav.pull-right
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              %span= resource_class
              %b.caret
            %ul.dropdown-menu
              - %w(assets inquiries pages).each do |resource| # Turn this into a config variable
                - path = send("admin_#{resource}_path".to_sym)
                = content_tag(:li, link_to(resource.capitalize, path)) unless current_page?(path)
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              %span Admin
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Settings', edit_admin_registration_path
              %li.divider
              %li= link_to 'Logout', destroy_admin_session_path, method: :delete