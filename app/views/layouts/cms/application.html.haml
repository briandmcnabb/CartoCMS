- content_for :head do
  %title= title "CartoCMS"
  %meta{ :name => "description", :content => "CartoCMS by New Cartographers, LLC" }/

- stylesheet 'CartoCMS'
- javascript 'CartoCMS'

- content_for :boilerplate do
  %section
    #sticky-wrap
      %header#top-level= render 'layouts/cms/navbar' if user_signed_in?
      %section#top-level.container
        = content_for?(:application) ? yield(:application) : yield
    %footer#top-level.vline-center
      .vline-wrap
        .container
          %p#legal.pull-left 2012 New Cartographers All Rights Reserved
          %p#attribution.pull-right= link_to 'New-Cartographers.com', 'http://new-cartographers.com'


= parent_layout 'boilerplate'