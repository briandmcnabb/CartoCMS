.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %h1.pull-left
        %span Carto
        %span CMS
      %nav
        %ul.nav.pull-right
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              %span= resource_class.to_s.titleize.pluralize
              %b.caret
            %ul.dropdown-menu
              - %w(assets pages page_templates sliders).each do |resource| # Turn this into a config variable
                - path = send("cms_#{resource}_path".to_sym)
                = content_tag(:li, link_to(resource.titleize, path)) unless current_page?(path)
              %li.divider
              - %w(inquiries).each do |resource| # Turn this into a config variable
                - path = send("cms_#{resource}_path".to_sym)
                = content_tag(:li, link_to(resource.titleize, path)) unless current_page?(path)
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              %i.icon-cog-big
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Users', cms_users_path
              %li= link_to 'Profile', edit_user_registration_path
              %li.divider
              %li= link_to 'Logout', destroy_user_session_path, method: :delete