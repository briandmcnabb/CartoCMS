%head
  %meta{ :charset => "utf-8" }/

  - if ENV['RACKSPACE_CDN_HOST']
    %link{ rel: 'dns-prefetch', href: "//#{ENV['RACKSPACE_CDN_HOST'].split('//')[1]}" }

  %meta{ 'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}/
  %meta{ :name => "viewport", :content => "width=device-width" }/
  = yield :head
  %meta{ :name => "author", :content => "New Cartographers Creative" }/
  %link{ rel: 'author', href: 'humans.txt' }/

  = content_for?(:stylesheet) ? yield(:stylesheet) : stylesheet_link_tag('CartoCMS/boilerplate', 'CartoCMS/mixins')
  = yield :headscript
  = csrf_meta_tags


%body
  /[if lt IE 7]
    %p.chromeframe
      Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.

  = mercury_toggler

  = content_for?(:boilerplate) ? yield(:boilerplate) : yield


  = yield :javascript
  = yield :extra_scripts


  - if ENV['GOOGLE_ANALYTICS']
    :javascript
      var _gaq=[['_setAccount',"#{ENV['GOOGLE_ANALYTICS']}"],['_trackPageview'],['_trackPageLoadTime'],['_setAllowAnchor', true]];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));

</html>