%head
  %meta{ :charset => "utf-8" }/
  %meta{ 'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}/
  
  %title= content_for?(:title) ? "New Cartographers Creative: #{ yield(:title) }" : "New Cartographers Creative"
  
  %meta{ :name => "description", :content => "New Cartographers Creative" }/
  %meta{ :name => "author", :content => "New Cartographers Creative" }/
  
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
  
  = yield(:stylesheet)
  = javascript_include_tag 'modernizr'
  
  = yield(:head)
  = csrf_meta_tags
  
  
%body
  = content_for?(:content) ? yield(:content) : yield
  
  
  = javascript_include_tag 'application'
  = yield(:javascript)
  = render 'layouts/ga_snippet' if ENV['GOOGLE_ANALYTICS']
  = render 'layouts/chrome_frame_snippet'
		
</html>