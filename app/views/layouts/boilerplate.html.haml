%head
  %meta{ :charset => "utf-8" }/
  %meta{ 'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1"}/
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/  
  = render 'layouts/meta_specs' rescue nil
  = yield :stylesheet
  = yield :headscript  
  = csrf_meta_tags


%body
  = content_for?(:content) ? yield(:content) : yield


  = javascript_include_tag 'application'
  = yield :bodyscript


  - if ENV['GOOGLE_ANALYTICS']
    :javascript
      var _gaq=[['_setAccount',"#{ENV['GOOGLE_ANALYTICS']}"],['_trackPageview'],['_trackPageLoadTime'],['_setAllowAnchor', true]];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));


  /[if lt IE 7 ]
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js'  
    :javascript
      window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})

