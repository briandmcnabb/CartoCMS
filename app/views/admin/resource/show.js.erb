// Update Partial
$("div#content").html("<%= j render params[:action], attributes: attributes %>");


// Update Action Link
<% action_link = capture do %>
  <%= link_to 'back', :back, id: 'action_link', class: 'btn', data:{ page: params[:action] } %>
<% end %>

$("a#action_link:not([data-page='<%= j params[:action] %>'])").replaceWith("<%= j action_link %>");


// Clear Form
$('input#query:text').val('');