<!-- IMPORTANT fade class makes fileupload depend on css transition effect REMOVE or RENAME it -->
<script id="template-upload" type="text/html">
  {% for (var i=0, files=o.files, l=files.length, file=files[0]; i<l; file=files[++i]) { %}
  <tr class="template-upload fade">
    <td class="preview"><div><span class="fade"></span></div></td>
    <td class="name"><div>{%=file.name%}</div></td>
    <td class="size"><div>{%=o.formatFileSize(file.size)%}</div></td>
    {% if (file.error) { %}
    <td class="error" colspan="2"><div><span class="label important">Error</span> {%=fileUploadErrors[file.error] || file.error%}</div></td>
    {% } else if (o.files.valid && !i) { %}
    <td><div class="progress progress-info progress-striped active"><div class="bar" style="width:0%;"></div></div></td>
    <td class="start">{% if (!o.options.autoUpload) { %}<button class="btn primary"><i class="icon-upload icon-white"></button>{% } %}</td>
    {% } else { %}
    <td colspan="2"></td>
    {% } %}
    <td class="cancel">{% if (!i) { %}<button class="btn info"><i class="icon-ban-circle icon-white"></i></button>{% } %}</td>
  </tr>
  {% } %}
</script>